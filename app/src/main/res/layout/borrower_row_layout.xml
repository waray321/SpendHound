<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginRight="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratalternatess_regular"
                    android:text="Date: "
                    android:textAlignment="textEnd"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/owedDateTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratalternatess_regular"
                    android:text="October 6, 2023"
                    android:textColor="@color/darkBlue"
                    android:textAlignment="textEnd"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratalternatess_regular"
                    android:text="Borrower: "
                    android:textAlignment="textStart"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/owedBorroweeTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratalternatess_regular"
                    android:text="Rovic"
                    android:textColor="@color/darkBlue"
                    android:textAlignment="textEnd"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratalternatess_regular"
                    android:text="Amount: "
                    android:textAlignment="textStart"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/owedAmountBorrowedTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratalternatess_regular"
                    android:text="â‚± 6000.00"
                    android:textColor="@color/darkBlue"
                    android:textAlignment="textEnd"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratalternatess_regular"
                    android:text="Status: "
                    android:textAlignment="textStart"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/owedStatusTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratalternatess_regular"
                    android:text="UnPaid"
                    android:textColor="@color/red"
                    android:textAlignment="textEnd"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/acceptBorrowBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Accept"
                android:backgroundTint="@color/yellow"
                android:layout_marginHorizontal="4dp"
                android:elevation="4dp"
                android:textSize="12dp"
                android:fontFamily="@font/montserratalternatess_regular"
                android:textColor="@color/whitest"/>
            <Button
                android:id="@+id/declineBorrowBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Decline"
                android:backgroundTint="@color/red"
                android:textSize="12dp"
                android:layout_marginHorizontal="4dp"
                android:fontFamily="@font/montserratalternatess_regular"
                android:elevation="4dp"
                android:textColor="@color/whitest"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/bottom_border2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="4dp"
        android:textColor="@color/darkBlue"
        android:background="@drawable/border_line_darkblue"/>
</LinearLayout>

