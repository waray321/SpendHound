<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_recent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:paddingVertical="8dp"
    android:paddingHorizontal="12dp"
    android:layout_margin="4dp"
    android:background="@drawable/rounded_background10">

    <ImageView
        android:id="@+id/profileNotifImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/placeholder_profile_image"
        android:padding="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/notifNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratalternatess_bold"
                android:text="Deku"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/notifdetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserratalternatess_regular"
                android:text="wants to borrow from you"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/notifDetails2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratalternatess_regular"
            android:text="Click here to accept!"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>