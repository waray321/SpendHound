<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserratalternatess_regular"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/logothree" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="40dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_profile_image" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratalternatess_regular"
            android:text="This month spends"
            android:textAlignment="center"
            android:textColor="#6c757d"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/totalMonthSpends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratalternatess_regular"
            android:text="â‚± 5,500.00"
            android:textAlignment="center"
            android:textColor="@color/darkBlue"
            android:textSize="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/textView"
        android:background="@drawable/rounded_background8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:alpha="0.5"
            android:fontFamily="sans-serif-thin"
            android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
            android:textColor="@color/grey"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.51" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserratalternatess_regular"
            android:text="Analytics"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/montserratalternatess_regular"
                android:text="This month"
                android:textAlignment="center"
                android:textColor="#adb5bd"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/myImageView33"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow_down_with_circle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <TextView
                android:id="@+id/yesterday3"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratalternatess_regular"
                android:text="Mon"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/yesterday2"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratalternatess_regular"
                android:text="Tue"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/yesterday1"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratalternatess_regular"
                android:text="Wed"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/today"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratalternatess_regular"
                android:text="Thu"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tomorrow1"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratalternatess_regular"
                android:text="Fri"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tomorrow2"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratalternatess_regular"
                android:text="Sat"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tomorrow3"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratalternatess_bold"
                android:text="Sun"
                android:textAlignment="center"
                android:textColor="@color/yellow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/yesterday3_bar"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/rounded_background" />

            <View
                android:id="@+id/yesterday2_bar"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/rounded_background2" />

            <View
                android:id="@+id/yesterday1_bar"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/rounded_background3" />

            <View
                android:id="@+id/today_bar"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_background4" />

            <View
                android:id="@+id/tommorow1_bar"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/rounded_background5" />

            <View
                android:id="@+id/tommorow2_bar"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/rounded_background6" />

            <View
                android:id="@+id/tommorow3_bar"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/rounded_background7" />
        </LinearLayout>

        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/diamond_shape"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

        <ImageView
            android:id="@+id/myImageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/diamond_shape"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/RecentLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/recentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratalternatess_bold"
                android:text="Recent transactions"
                android:textColor="#6c757d"
                android:textSize="16sp" />

            <!--<androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView"
                android:name="com.waray.spendhound.ui.home.HomeFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recentTextView"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="0dp"
                android:background="@color/darkBlue"
                tools:layout="@layout/fragment_transaction_list" />-->

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_addTransaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="48dp"
                app:backgroundTint="#FFBA08"
                app:srcCompat="@drawable/baseline_add_24"
                tools:ignore="SpeakableTextPresentCheck" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>