<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratalternatess_regular"
            android:text="Date: "
            android:layout_gravity="center|end"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratalternatess_regular"
            android:text="July 31, 1999"
            android:layout_gravity="center|end"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratalternatess_regular"
            android:text="Borrower: "
            android:textSize="12dp" />

        <TextView
            android:id="@+id/borrower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratalternatess_regular"
            android:text="Name"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratalternatess_regular"
        android:text="Borrow from:"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/borrowee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratalternatess_regular"
        android:text="How much: "
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/borrowEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/glassy_background"
        android:elevation="3dp"
        android:fontFamily="@font/montserratalternatess_regular"
        android:hint="Enter amount"
        android:inputType="number"
        android:paddingVertical="12dp"
        android:textAlignment="center"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/borrowBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow"
        android:elevation="3dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/montserratalternatess_bold"
        android:paddingVertical="20dp"
        android:text="Borrow"
        android:textColor="#ffffff" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/CustomProgressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/glassy_background"
            android:padding="20dp"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>