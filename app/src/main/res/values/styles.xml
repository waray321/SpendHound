<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/dropdown_menu_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:fontFamily">@font/montserratalternatess_regular</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CustomProgressBarStyle">
        <!-- Customize the ProgressBar attributes -->
        <item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item>
        <!-- Add more attributes here if needed -->
    </style>

    <style name="AppMenuItemStyle">
        <!-- Change the font family -->
        <item name="android:fontFamily">@font/montserratalternatess_regular</item>
        <!-- Change the font size (adjust the textSize attribute as needed) -->
        <item name="android:textSize">16sp</item>
    </style>

</resources>
